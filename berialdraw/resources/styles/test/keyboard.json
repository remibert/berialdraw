{
	"radius"      : 7,
	"thickness"   : 1,
	"margin"      : {"top":3,"left":3,"bottom":3,"right":3},
	"font-size"   : {"width" : 28,"height" : 28},
	"color"       : 0x00000040, // KEYBOARD_KEY_COLOR         
	"border-color": 0x00000041, // KEYBOARD_KEY_BORDER_COLOR  
	"text-color"  : 0x00000042, // KEYBOARD_KEY_TEXT_COLOR    
	"min-size"    : {"height":40 },
	"extend"      : "all",
	"mappings":
	[
		//  {"name":"lowercase", "mapping":"12345\r67890\r\x08.\n"},
		{"name":"lowercase", "mapping":"qwertyuiop\rasdfghjkl\'\r\u2B06\tzxcvbnm\t\x08\r\x01\t \t\n"},
		{"name":"uppercase", "mapping":"QWERTYUIOP\rASDFGHJKL\'\r\u2B06\tZXCVBNM\t\x08\r\x01\t \t\n" },
		{"name":"numeric",   "mapping":"1234567890\r_/:;()\u20AC&@\"\r\u2B06\t.,?!\'°\t\x08\r\x01\t \t\n"},
		{"name":"symbol",    "mapping":"[]{}#\x25^*+=\r-\\|~<>$\u00A3\u00A5\"\r\u2B06\t.,?!\'§\t\x08\r\x01\t \t\n"},
	],
	
	"keys":
	[   //                                                       KEYBOARD_FUNC_BORDER_COLOR KEYBOARD_FUNC_TEXT_COLOR KEYBOARD_FUNC_COLOR                                                                     
		{"key":0x01   ,"name":"lowercase","to":"numeric"  , "border-color":0x00000044, "text-color":0x00000045, "color":0x00000043, "text":"  123  "  ,"font-size"   : {"width" : 16,"height" : 16}},
		{"key":0x01   ,"name":"uppercase","to":"numeric"  , "border-color":0x00000044, "text-color":0x00000045, "color":0x00000043, "text":"  123  "  ,"font-size"   : {"width" : 16,"height" : 16}},
		{"key":0x01   ,"name":"numeric"  ,"to":"lowercase", "border-color":0x00000044, "text-color":0x00000045, "color":0x00000043, "text":"  ABC  "  ,"font-size"   : {"width" : 16,"height" : 16}},
		{"key":0x01   ,"name":"symbol"   ,"to":"lowercase", "border-color":0x00000044, "text-color":0x00000045, "color":0x00000043, "text":"  ABC  "  ,"font-size"   : {"width" : 16,"height" : 16}},
		{"key":0x08   ,                                     "border-color":0x00000044, "text-color":0x00000045, "color":0x00000043, "text":" \u232B "}, # Backspace
		{"key":0x0A   ,                                     "border-color":0x00000044, "text-color":0x00000045, "color":0x00000043, "text":"  \u21A9  "}, # Enter
		{"key":0x20   ,"size-policy":"enlarge-width"       , "border-color":0x00000044, "text-color":0x00000045, "color":0x00000043, "text":" "       }, # Space bar
		{"key":0x2B06 ,"name":"lowercase","to":"uppercase", "border-color":0x00000044, "text-color":0x00000045, "color":0x00000043, "text":" \u2B06 "}, # Shift
		{"key":0x2B06 ,"name":"uppercase","to":"lowercase", "border-color":0x00000044, "text-color":0x00000045, "color":0x00000043, "text":" \u2B06 "}, # Shift
		{"key":0x2B06 ,"name":"numeric"  ,"to":"symbol"   , "border-color":0x00000044, "text-color":0x00000045, "color":0x00000043, "text":" #+= "   ,"font-size"   : {"width" : 16,"height" : 16}}, # Shift
		{"key":0x2B06 ,"name":"symbol"   ,"to":"numeric"  , "border-color":0x00000044, "text-color":0x00000045, "color":0x00000043, "text":" 123 "   ,"font-size"   : {"width" : 16,"height" : 16}}, # Shift
		{"key":0x2190 ,                                     "border-color":0x00000044, "text-color":0x00000045, "color":0x00000043, "text":" \u2190 "   }, # Left arrow
		{"key":0x2192 ,                                     "border-color":0x00000044, "text-color":0x00000045, "color":0x00000043, "text":" \u2192 "   }, # Right arrow
	]
}